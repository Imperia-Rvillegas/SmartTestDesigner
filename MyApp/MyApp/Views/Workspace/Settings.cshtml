@{
    ViewData["Title"] = "Ajustes";
}

<div class="space-y-10">
    <section class="rounded-3xl border border-white/10 bg-gray-900/60 p-8">
        <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
            <div class="space-y-2">
                <h1 class="text-3xl font-semibold text-white">Ajustes del workspace</h1>
                <p class="text-sm text-gray-400">Configura workspace, variables de entorno, permisos, plantillas y políticas de retención.</p>
            </div>
            <button class="rounded-full border border-white/10 px-4 py-2 text-sm text-gray-200 hover:border-indigo-400 hover:text-white">Guardar cambios</button>
        </div>
    </section>

    <section class="grid gap-6 xl:grid-cols-[minmax(0,1.4fr)_minmax(0,1fr)]">
        <article class="space-y-6 rounded-2xl border border-white/10 bg-gray-900/60 p-6 text-sm text-gray-300">
            <div class="space-y-3">
                <h2 class="text-sm font-semibold uppercase tracking-wide text-gray-400">Workspace</h2>
                <label class="block">
                    Nombre
                    <input type="text" value="Imperia QA" class="mt-1 w-full rounded-lg border border-white/10 bg-gray-950/70 px-3 py-2 text-sm text-gray-100 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500/40" />
                </label>
                <label class="block">
                    Color primario
                    <input type="color" value="#4f46e5" class="mt-1 h-10 w-20 rounded border border-white/10 bg-gray-950/80" />
                </label>
                <label class="block">
                    Logo
                    <div class="mt-1 flex items-center gap-3">
                        <div class="size-12 rounded-full bg-indigo-500/20"></div>
                        <button class="rounded-full border border-white/10 px-3 py-1 text-xs hover:border-indigo-400 hover:text-white">Subir</button>
                    </div>
                </label>
            </div>
            <div class="space-y-3">
                <h2 class="text-sm font-semibold uppercase tracking-wide text-gray-400">Variables de entorno</h2>
                <div class="space-y-2 text-xs">
                    <div class="flex items-center justify-between rounded-lg border border-white/10 bg-gray-950/70 px-3 py-2">
                        <span>BASE_URL</span>
                        <span class="text-gray-400">https://qa.imperia.com</span>
                    </div>
                    <div class="flex items-center justify-between rounded-lg border border-white/10 bg-gray-950/70 px-3 py-2">
                        <span>HEADLESS</span>
                        <span class="text-gray-400">true</span>
                    </div>
                    <div class="flex items-center justify-between rounded-lg border border-white/10 bg-gray-950/70 px-3 py-2">
                        <span>TIMEOUT</span>
                        <span class="text-gray-400">30s</span>
                    </div>
                    <button class="rounded-full border border-white/10 px-3 py-1 text-xs hover:border-indigo-400 hover:text-white">Agregar variable</button>
                </div>
            </div>
            <div class="space-y-3">
                <h2 class="text-sm font-semibold uppercase tracking-wide text-gray-400">Permisos y roles</h2>
                <table class="min-w-full divide-y divide-white/10 overflow-hidden rounded-2xl border border-white/5 text-left text-xs">
                    <thead class="bg-white/5 text-gray-400">
                        <tr>
                            <th class="px-3 py-2 font-semibold">Usuario</th>
                            <th class="px-3 py-2 font-semibold">Rol</th>
                            <th class="px-3 py-2 font-semibold">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/5 text-gray-200">
                        <tr>
                            <td class="px-3 py-2">rvillegas</td>
                            <td class="px-3 py-2">Admin</td>
                            <td class="px-3 py-2">
                                <button class="rounded-full border border-white/10 px-3 py-1 hover:border-indigo-400 hover:text-white">Editar</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-3 py-2">lmartinez</td>
                            <td class="px-3 py-2">QA/Dev</td>
                            <td class="px-3 py-2">
                                <button class="rounded-full border border-white/10 px-3 py-1 hover:border-indigo-400 hover:text-white">Editar</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-3 py-2">bhernandez</td>
                            <td class="px-3 py-2">Viewer</td>
                            <td class="px-3 py-2">
                                <button class="rounded-full border border-white/10 px-3 py-1 hover:border-indigo-400 hover:text-white">Editar</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="space-y-3">
                <h2 class="text-sm font-semibold uppercase tracking-wide text-gray-400">Plantillas</h2>
                <div class="grid gap-3 lg:grid-cols-2">
                    <div class="rounded-2xl border border-white/10 bg-gray-950/70 p-4 text-xs text-gray-300">
                        <p class="font-semibold text-white">Gherkin</p>
                        <p class="mt-2 text-gray-400">Estructura base para features con Background y tags obligatorios.</p>
                    </div>
                    <div class="rounded-2xl border border-white/10 bg-gray-950/70 p-4 text-xs text-gray-300">
                        <p class="font-semibold text-white">Page Object</p>
                        <p class="mt-2 text-gray-400">Convenciones LoginPage, OrdersPage, etc.</p>
                    </div>
                    <div class="rounded-2xl border border-white/10 bg-gray-950/70 p-4 text-xs text-gray-300">
                        <p class="font-semibold text-white">Step Definition</p>
                        <p class="mt-2 text-gray-400">Paquetes com.imperia.qa.steps con hooks incluidos.</p>
                    </div>
                    <div class="rounded-2xl border border-white/10 bg-gray-950/70 p-4 text-xs text-gray-300">
                        <p class="font-semibold text-white">Runner</p>
                        <p class="mt-2 text-gray-400">Configuración JUnit/TestNG y plugins de reporte.</p>
                    </div>
                </div>
            </div>
        </article>

        <aside class="space-y-4">
            <section class="rounded-2xl border border-white/10 bg-gray-900/60 p-6 text-sm text-gray-300">
                <h2 class="text-sm font-semibold text-white">Políticas</h2>
                <ul class="mt-3 space-y-2 text-xs text-gray-400">
                    <li>Retención de artefactos: 30 días</li>
                    <li>Limpieza automática de builds fallidas cada domingo</li>
                    <li>Auditoría habilitada</li>
                </ul>
            </section>
            <section class="rounded-2xl border border-white/10 bg-gray-900/60 p-6 text-sm text-gray-300">
                <h2 class="text-sm font-semibold text-white">Seguridad y privacidad</h2>
                <ul class="mt-3 space-y-2 text-xs text-gray-400">
                    <li>Cofre de secretos con rotación programada.</li>
                    <li>Scopes mínimos para tokens de Imperia y Git.</li>
                    <li>Mascarado de datos sensibles en inputs.</li>
                    <li>Entornos QA/Stage/Prod separados.</li>
                </ul>
            </section>
            <section class="rounded-2xl border border-white/10 bg-gray-900/60 p-6 text-sm text-gray-300">
                <h2 class="text-sm font-semibold text-white">Atajos de teclado</h2>
                <ul class="mt-3 space-y-2 text-xs text-gray-400">
                    <li>N: Nuevo escenario</li>
                    <li>G: Generar Gherkin</li>
                    <li>R: Iniciar/Parar grabador</li>
                    <li>B: Probar build</li>
                    <li>/: Búsqueda global</li>
                    <li>Ctrl/Cmd + S: Guardar</li>
                </ul>
            </section>
            <section class="rounded-2xl border border-dashed border-white/10 bg-gray-900/40 p-6 text-center text-xs text-gray-400">
                Configura políticas y plantillas para todo tu equipo.
            </section>
        </aside>
    </section>
</div>
