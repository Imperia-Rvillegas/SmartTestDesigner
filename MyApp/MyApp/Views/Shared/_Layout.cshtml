<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    @await Html.PartialAsync("_TailwindScriptsPartial")
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyApp.styles.css" asp-append-version="true" />
</head>
<body class="min-h-screen bg-gray-950 text-gray-100">
    <header class="border-b border-white/10 bg-gray-900/60">
        <div class="mx-auto flex max-w-7xl flex-col gap-4 px-4 py-4 sm:flex-row sm:items-center sm:justify-between sm:gap-6 sm:py-6">
            <div class="flex w-full flex-1 flex-col gap-4 sm:flex-row sm:items-center">
                <div class="relative flex-1">
                    <input name="search" placeholder="Buscar escenarios, pasos, localizadores o repos" class="w-full rounded-xl border border-white/10 bg-gray-950/80 py-2 pl-10 pr-4 text-sm text-white placeholder:text-gray-500 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500/60" />
                    <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="pointer-events-none absolute left-3 top-1/2 size-5 -translate-y-1/2 text-gray-400">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9 3.5a5.5 5.5 0 1 0 0 11 5.5 5.5 0 0 0 0-11ZM2 9a7 7 0 1 1 12.452 4.391l3.328 3.329a.75.75 0 1 1-1.06 1.06l-3.329-3.328A7 7 0 0 1 2 9Z"></path>
                    </svg>
                </div>
                <div class="flex flex-wrap items-center gap-3 sm:justify-end">
                    <button class="flex items-center gap-2 rounded-lg border border-white/10 bg-gray-900/80 px-3 py-2 text-sm font-medium text-gray-200 transition hover:border-indigo-500 hover:text-white">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="size-5 text-indigo-400">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 7.5V6a3.75 3.75 0 1 1 7.5 0v1.5"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 9.75h13.5a.75.75 0 0 1 .75.75v9a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5v-9a.75.75 0 0 1 .75-.75Z"></path>
                        </svg>
                        Imperia / Proyecto X
                    </button>
                    <span class="flex items-center gap-2 rounded-lg bg-emerald-500/10 px-3 py-1.5 text-xs font-semibold text-emerald-300">
                        <span class="size-2 rounded-full bg-emerald-400"></span>
                        Maven ¬∑ Sincronizado
                    </span>
                </div>
            </div>
            <div class="flex items-center justify-end gap-4">
                <button type="button" class="relative rounded-full p-2 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500/60">
                    <span class="absolute right-1 top-1 inline-flex size-2 rounded-full bg-rose-500"></span>
                    <span class="sr-only">Ver notificaciones</span>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0"></path>
                    </svg>
                </button>
                <el-dropdown class="relative">
                    <button class="flex items-center gap-3 rounded-full border border-white/10 bg-gray-900/80 px-2 py-1 pr-3 text-sm text-gray-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500/60">
                        <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?auto=format&fit=facearea&facepad=2&w=64&h=64&q=80" alt="Usuario" class="size-9 rounded-full border border-white/10" />
                        <div class="text-left">
                            <p class="text-xs text-gray-400">Admin</p>
                            <p class="font-semibold text-white">rvillegas</p>
                        </div>
                    </button>
                    <el-menu anchor="bottom end" popover class="w-56 origin-top-right rounded-xl border border-white/10 bg-gray-900/95 p-1 text-sm text-gray-200 shadow-xl">
                        <a href="#" class="block rounded-lg px-3 py-2 hover:bg-white/5">API Keys</a>
                        <a href="#" class="block rounded-lg px-3 py-2 hover:bg-white/5">Permisos</a>
                        <a href="#" class="block rounded-lg px-3 py-2 hover:bg-white/5">Cerrar sesi√≥n</a>
                    </el-menu>
                </el-dropdown>
            </div>
        </div>
    </header>
    <div class="flex min-h-[calc(100vh-6rem)] flex-1">
        <aside class="hidden w-72 shrink-0 border-r border-white/10 bg-gray-950/80 px-4 py-6 lg:flex">
            <nav class="flex flex-1 flex-col gap-6 text-sm">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center gap-3 rounded-lg bg-indigo-500/10 px-3 py-2 font-semibold text-indigo-300 hover:bg-indigo-500/20 hover:text-white">
                    <span class="inline-flex size-8 items-center justify-center rounded-lg bg-indigo-500/20 text-indigo-300">üè†</span>
                    Inicio
                </a>
                <div>
                    <p class="px-3 text-xs font-semibold uppercase tracking-wide text-gray-500">Nuevo</p>
                    <div class="mt-2 space-y-1">
                        <a href="#" class="flex items-center justify-between rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">
                            Crear escenario desde pasos
                            <span class="text-xs text-indigo-300">Wizard</span>
                        </a>
                        <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Importar pasos (CSV/Markdown)</a>
                        <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Generar Gherkin con IA</a>
                    </div>
                </div>
                <div class="space-y-1">
                    <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Escenarios</a>
                    <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Grabador</a>
                    <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Localizadores</a>
                    <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Proyectos</a>
                    <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Ejecuciones</a>
                    <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Integraciones</a>
                    <a href="#" class="block rounded-lg px-3 py-2 text-gray-300 hover:bg-white/5 hover:text-white">Ajustes</a>
                </div>
            </nav>
        </aside>
        <main class="flex-1">
            <div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-10">
                @RenderBody()
            </div>
        </main>
    </div>
    <footer class="border-t border-white/10 bg-gray-900/60 py-6">
        <div class="mx-auto max-w-7xl px-4 text-center text-sm text-gray-500 sm:px-6 lg:px-8">
            &copy; 2025 - MyApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-indigo-400 hover:text-indigo-300">Aviso de privacidad</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
